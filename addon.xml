<addon id="plugin.video.voyo.ro" name="VOYO" provider-name="derzis" version="0.1.1">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" version="2.22.0" />
        <import addon="script.module.beautifulsoup4" version="4.6.2" />
        <import addon="script.module.routing" version="0.2.3" />
        <import addon="script.module.inputstreamhelper" version="0.3.3" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">VOYO</summary>
        <summary lang="ro_RO">VOYO</summary>
        <description lang="en_GB">Addon for playing movies, series, shows and TV channels available on the VOYO Romania platform..</description>
        <description lang="ro_RO">Supliment pentru redarea filmelor, serialelor, emisiunilor și posturilor TV, disponibile pe platforma VOYO România.</description>
        <platform>all</platform>
        <source>https://github.com/derzis/plugin.video.voyo.ro</source>
        <news>Compatibil cu Kodi 19 și Kodi 20</news>
        <assets>
            <icon>resources/icon.png</icon>
        </assets>
    </extension>
</addon>
